@model WalkUpAdvertisingShellWeb.Models.IndexViewModel
@{
    ViewBag.Title = "Manage";
}

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>

    <div class="jumbotron">
        <h1>ASP.NET</h1>
        <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
        <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
    </div>

    <div class="row">
        <div class="col-md-4">
            <h2> @Html.ActionLink("Manage Devices", "Index", "ManageDevice")</h2>
            <p>
                You can manage your wristbands here.
            </p>

        </div>
        <div class="col-md-4">
            <h2> @Html.ActionLink("Manage Person", "Index", "ManagePerson")</h2>
            <p>You can Create, Modify and Delete profiles here.</p>

        </div>
        <div class="col-md-4">
            <h2> @Html.ActionLink("Manage Account", "SetPassword", "Manage")</h2>
            <p>You can Manage your account details here.</p>

        </div>
    </div>
</div>